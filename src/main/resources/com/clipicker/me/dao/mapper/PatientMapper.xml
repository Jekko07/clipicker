<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.clipicker.me.dao.mapper.PatientMapper">
  <select id="showNearbyClinics" parameterType="java.util.Map" resultType="com.clipicker.me.domain.Clinic">
    select *
    from clinics
    where is_admin = 0 and status = 1
    and id IN (select distinct clinic_id
    from (select clinic_id
              from clinic_spec_service
                <where>
                  <if test="specIdList != null and !specIdList.empty">
                    spec_id in <foreach item="item" index="index" collection="specIdList" open="(" separator="," close=")">#{item}</foreach>
                  </if>
                </where>
              union
                select clinic_id from clinic_symptom_service
                <where>
                  <if test="symptomIdList != null and !symptomIdList.empty">
                    symptom_id in <foreach item="item" index="index" collection="symptomIdList" open="(" separator="," close=")">#{item}</foreach>
                  </if>
                </where>
              union
                select id from clinics where is_admin = 0 and (all_spec_services = 1 and all_symptom_services = 1)
    ) clinicFiltered)

  </select>
</mapper>
